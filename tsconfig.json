{
    "compilerOptions": {
        "alwaysStrict": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "inlineSourceMap": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es2017",
            "esnext",
            "esnext.asynciterable"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "noUnusedLocals": true,
        "outDir": "dist",
        "removeComments": false,
        "target": "es2017",
        "strict": true
    },
    "exclude": [
        "dist",
        "node_modules",
        "packages"
    ],
    "include": [
        "@types/**/*.ts",
        "release/**/*.ts",
        "scripts/**/*.ts"
    ],
    "references": [
        { "path": "packages/services" },
        { "path": "packages/utils" },
        { "path": "packages/worker" }
    ]
}
